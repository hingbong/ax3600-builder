uci set system.@system[0].timezone=CST-8
uci set system.@system[0].zonename=Asia/Shanghai
uci set system.@system[0].hostname='LL-Network'
uci set system.@system[0].description='Xiaomi AX3600 With OpenWrt'
uci commit system

uci del network.globals.ula_prefix
uci set network.lan.ip6ifaceid='eui64'

# Enable wifi by default
uci set wireless.radio0.country='RU'
uci set wireless.radio1.country='RU'
uci set wireless.radio2.country='RU'
uci set wireless.radio1.disabled=0
uci set wireless.radio2.disabled=0
uci set wireless.radio2.htmode='HE40'
uci set wireless.radio1.htmode='HE160'
uci set wireless.default_radio1.ssid='LL-Network'
# Force 40Mhz on 2.4Ghz
uci set wireless.radio2.noscan=1

uci set wireless.default_radio2.multicast_to_unicast_all='1'
uci set wireless.default_radio2.time_advertisement='2'
uci set wireless.default_radio2.time_zone='CST-8'
uci set wireless.default_radio1.multicast_to_unicast_all='1'
uci set wireless.default_radio1.time_advertisement='2'
uci set wireless.default_radio1.time_zone='CST-8'
uci set wireless.radio2.channel='13'

uci set dhcp.odhcpd.leasetrigger='/usr/lib/unbound/odhcpd.sh'
uci set unbound.ub_main.dhcp_link='odhcpd'
uci set unbound.ub_main.dhcp4_slaac6='1'
uci set unbound.ub_main.resource='tiny'

uci add unbound zone # =cfg04dc81
uci set unbound.@zone[-1].fallback='0'
uci set unbound.@zone[-1].enabled='1'
uci set unbound.@zone[-1].zone_type='forward_zone'
uci set unbound.@zone[-1].dns_assist='unprotected-loop'
uci add_list unbound.@zone[-1].server='::1'
uci add_list unbound.@zone[-1].zone_name='.'
uci set unbound.@zone[-1].port='5335'
uci set unbound.ub_main.unbound_control='1'

uci set dhcp.odhcpd.maindhcp='1'

uci commit
